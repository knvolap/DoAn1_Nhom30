@model Models.EF.NhanVien

@{
    ViewBag.Title = "Thêm mới nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-9">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-5">
                <ul class="list-inline shop-top-menu pb-3 pt-1">
                    <li class="list-inline-item">
                        <a class="h3 text-dark text-decoration-none mr-3" href="#">Thêm mới nhân viên</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.IDNhanVien)

            <div style="margin-left: 20px; margin-top: 20px">
                <div class="form-group">
                    <label class="pr-1  form-control-label"><strong>Họ tên</strong></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Email</strong></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Mật khẩu</strong></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Số điện thoại</strong></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Địa chỉ</strong></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Phòng ban</strong></label>
                    <div class="col-md-10">
                        @Html.DropDownList("IDPhongBan", null, "Chọn phòng ban", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDPhongBan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Phân quyền</strong></label>
                    <div class="col-md-10">
                        @Html.DropDownList("IDPhanQuyen", null, "Chọn phân quyền",htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IDPhanQuyen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Chức vụ</strong></label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ChucVu, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group" style="margin-top:20px">
                    <label class="pr-1  form-control-label"><strong>Giới tính</strong></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            @Html.EditorFor(model => model.GioiTinh)
                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <br />

            <div class="form-group" style="margin-left: 20px">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Lưu" class="btn btn-success" />
                </div>
            </div>
            <br />            
        </div>
        <div>
            @Html.ActionLink("Trở về", "Index")
        </div>
    }
</div>



